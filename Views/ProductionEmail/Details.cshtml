@model NIA_CRM.Models.ProductionEmail

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <div class="col-md-12">
        <div class="card card-body bg-light text-black">
            <div class="row mt-3">
                <div class="col-12">
                    <div class="form-group">
                        <label class="control-label">Template Name</label>
                        <input class="form-control w-100" value="@Model.TemplateName" disabled />
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Email Type -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Email Type</label>
                        <input class="form-control" value="@Model.EmailType" disabled />
                    </div>
                </div>
                <!-- Subject -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Subject</label>
                        <input class="form-control" value="@Model.Subject" disabled />
                    </div>
                </div>
            </div>

            <!-- Body (Textarea) -->
            <div class="row mt-3">
                <div class="col-12">
                    <div class="form-group">
                        <label class="control-label">Body</label>
                        <div class="border p-3 bg-white rounded overflow-auto" style="max-height: 500px;">
                            @Html.Raw(Model.Body)
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="position-bottom-left mt-3">
            <a class="btn btn-dark me-2" asp-action="Index">Back to Email Patterns</a>
            @if (User.IsInRole("Admin"))
            {
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
            }
        </div>
    </div>
</div>
