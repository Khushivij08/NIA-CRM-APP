@model NIA_CRM.Models.ProductionEmail

@{
    ViewData["Title"] = "Create";
}

<h1>Create Email Pattern</h1>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div class="card card-body bg-light text-black">
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="form-group">
                            <label asp-for="TemplateName" class="control-label"></label>
                            <span class="required-label">(required)</span>
                            <input asp-for="TemplateName" class="form-control w-100" rows="4"></input>
                            <span asp-validation-for="TemplateName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <!-- Email Type -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="EmailType" class="control-label"></label>
                            <span class="required-label">(required)</span>
                            <select asp-for="EmailType" class="form-control" asp-items="Html.GetEnumSelectList<EmailType>()"></select>
                            <span asp-validation-for="EmailType" class="text-danger"></span>
                        </div>

                    </div>
                    <!-- Subject -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Subject" class="control-label"></label>
                            <span class="required-label">(required)</span>
                            <input asp-for="Subject" class="form-control" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Body (Textarea) -->
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="form-group">
                            <label asp-for="Body" class="control-label"></label>
                            <span class="required-label">(required)</span>
                            <textarea asp-for="Body" class="form-control w-100" rows="4"></textarea>
                            <span asp-validation-for="Body" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>


            <div class="position-bottom-left">
                <a class="btn btn-dark me-2" asp-action="Index">Back to Email Patterns</a>
                <input type="submit" value="Create" class="btn btn-primary" />

            </div>
        </form>
    </div>
</div>


@section Head {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#Body').summernote({
                height: 250,
                toolbar: [
                    ['style', ['bold', 'italic', 'underline', 'clear']],
                    ['font', ['fontsize', 'fontname']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['table', ['table']],
                    ['insert', ['link', 'picture', 'video']],
                    ['view', ['fullscreen', 'codeview', 'help']]
                ]
            });
        });
    </script>
}