<!-- Modal -->
<div class="modal fade" id="addNotificationModal" tabindex="-1" role="dialog" aria-labelledby="SpecialtymyModalLabel">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title" id="SpecialtymyModalLabel">Send Email</h4>
				<button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-md-12">
						<form method="post" id="createNotificationForm">
							<input type="hidden" id="selectedContactIds" name="selectedContactIds" />

							<div class="text-danger validation-summary-errors">
								<ul id="ErrorList"></ul>
							</div>

							<div class="card card-body bg-light text-black">
								<div class="row">
									<!-- Multi-select Contact List -->
									<div class="col-12 mb-3">
										<select id="availContacts" name="availContacts" multiple class="form-control w-100" size="10">
											@{
												if (ViewData["availContacts"] is MultiSelectList contactList)
												{
													foreach (var item in contactList)
													{
														<option value="@item.Value">@item.Text</option>
													}
												}
												else
												{
													<option disabled>No contacts available</option>
												}
											}
										</select>

									</div>

									<!-- Subject Input -->
									<div class="col-md-12">
										<div class="form-group">
											<label for="emailSubject">Subject (required)</label>
											<input type="text" id="emailSubject" name="Subject" class="form-control" />
										</div>
									</div>
								</div>

								<!-- Body (Textarea) -->
								<div class="row mt-3">
									<div class="col-12">
										<div class="form-group">
											<label for="emailBody">Body (required)</label>
											<textarea id="emailBody" name="Body" class="form-control w-100" rows="4"></textarea>
										</div>
									</div>
								</div>
							</div>

							<!-- Submit Button -->
							<div class="position-bottom-left mt-3">
								<button type="submit" id="submitNotificationForm" class="btn btn-outline-dark">Send Email</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
