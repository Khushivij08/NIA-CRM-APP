@model NIA_CRM.Models.Cancellation

@{
    ViewData["Title"] = "Details";
}

<partial name="_Notification" />


<h1>Details</h1>

<div>
    <h4>Cancellation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CancellationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CancellationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsCancelled)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsCancelled)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CancellationNote)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CancellationNote)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.MemberName)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a>
    }
    |
    <a asp-action="Index">Back to Member Archivings</a>
</div>
