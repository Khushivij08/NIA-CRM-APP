@model NIA_CRM.Models.ContactCancellation

@{
    ViewData["Title"] = "Delete";
}

<h1>Activate</h1>

<div class="card">
    <div class="card-body">

        <h3>Are you sure you want to activate this contact?</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Contact Name:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Contact.Summary)
            </dd>
            <dt class="col-sm-2">
                Archiving Date:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CancellationDate)
            </dd>
            <dt class="col-sm-2">
                Archiving Note:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CancellationNote)
            </dd>
           
        </dl>

    </div>

    <div class="position-bottom-left">
        <a asp-action="Index" class="btn btn-dark me-2">Back to Contact Archivings</a>
        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Activate" class="btn btn-primary" />
        </form>
        
    </div>
</div>

