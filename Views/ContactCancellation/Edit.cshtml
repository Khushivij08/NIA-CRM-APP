@model NIA_CRM.Models.ContactCancellation

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Contact Archiving</h4>
<br />
<h4>@Model.Contact.Summary</h4>
<hr />
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="card">
        <div class="card-body">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="RowVersion" />

            <div class="form-group">
                <label asp-for="CancellationDate" class="control-label"></label>
                <input asp-for="CancellationDate" class="form-control" />
                <span asp-validation-for="CancellationDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CancellationNote" class="control-label"></label>
                <input asp-for="CancellationNote" class="form-control" />
                <span asp-validation-for="CancellationNote" class="text-danger"></span>
            </div>

        </div>
    </div>
    <div class="position-bottom-left">
        <a asp-action="Index" class="btn btn-dark me-2">Back to Contact Archivings</a>
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
