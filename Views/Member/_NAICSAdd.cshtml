@model NIA_CRM.Models.NAICSCode

<form asp-controller="NAICSCodes" asp-action="Create"  id="createNAICSCodeForm">
    <div class="row">
        <div class="col-md-12">
            <div class="text-danger validation-summary-errors">
                <ul id="ErrorList"></ul>
            </div>

            <label asp-for="Code" class="control-label">NAICS Code</label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label">NAICS Code Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" id="submitNAICSCodeCreate" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>
